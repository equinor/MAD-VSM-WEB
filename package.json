{
  "name": "mad-vsm-web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "NODE_OPTIONS='--inspect' next dev",
    "build": "next build",
    "start": "next start",
    "release-dev": "git tag -a -f DEV  && yarn push-tags",
    "release-test": "git tag -a -f TEST && yarn push-tags",
    "release-qa": "git tag -a -f QA   && yarn push-tags",
    "release-prod": "git tag -a -f PROD && yarn push-tags",
    "push-tags": "git push origin --tags -f && echo Check status: https://console.radix.equinor.com/applications/vsm/jobs",
    "use-dev": "cp environment-variables/DEV.env .env && yarn dev",
    "use-test": "cp environment-variables/TEST.env .env && yarn dev",
    "use-qa": "cp environment-variables/QA.env .env && yarn dev",
    "lint": "pretty-quick --staged && lint-staged",
    "postinstall": "husky install"
  },
  "dependencies": {
    "@azure/msal-browser": "^2.12.0",
    "@azure/msal-react": "^1.0.0-alpha.3",
    "@equinor/eds-core-react": "^0.9.0",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "axios": "^0.21.1",
    "easy-peasy": "^5.0.0",
    "moment": "^2.29.1",
    "next": "10.1.1",
    "pixi-viewport": "^4.21.1",
    "pixi.js": "^5.3.8",
    "react": "17.0.2",
    "react-device-detect": "^1.17.0",
    "react-dom": "17.0.2",
    "react-json-view": "^1.21.1",
    "sass": "^1.32.8",
    "styled-components": "^5.2.2"
  },
  "devDependencies": {
    "@types/node": "^14.14.22",
    "@types/react": "^17.0.0",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-config-react": "^1.1.7",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-sonarjs": "^0.5.0",
    "husky": "^5.0.9",
    "lint-staged": ">=8",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "typescript": "^4.1.3"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --cache --fix"
    ]
  }
}
